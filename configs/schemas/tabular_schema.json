{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabular Data Schema",
  "type": "object",
  "properties": {
    "required_columns": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "column_types": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "enum": ["numeric", "categorical", "text", "datetime"]
        }
      }
    },
    "nullable_columns": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "value_ranges": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "min": {"type": "number"},
            "max": {"type": "number"}
          }
        }
      }
    }
  }
}
